<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="8dp"
        android:weightSum="10">

        <ImageView
            android:id="@+id/img_food"
            android:src="@drawable/app_icon"
            android:scaleType="centerCrop"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingTop="10px">

            <TextView
                android:id="@+id/txt_food_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunitobold"
                android:text="Chicken Biryani"
                android:textColor="#151515"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/txt_food_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$180"
                android:textColor="@color/button_color"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:paddingLeft="80dp">

            <ImageView
                android:id="@+id/img_detail"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginBottom="10dp"
                android:padding="10px"
                android:src="@drawable/ic_info_outline_button_color_24dp" />

            <ImageView
                android:id="@+id/img_fav"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginBottom="10dp"
                android:padding="10px"
                android:src="@drawable/ic_favorite_border_button_color_24dp" />

            <ImageView
                android:id="@+id/img_cart"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginBottom="10dp"
                android:padding="10px"
                android:src="@drawable/ic_shopping_cart_button_color_24dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>